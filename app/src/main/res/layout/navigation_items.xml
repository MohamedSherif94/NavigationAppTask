<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:layout_height="5dp"
        android:layout_width="match_parent"
        android:background="@color/borderColor"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:background="?android:attr/selectableItemBackground"
        android:paddingTop="@dimen/h_layout_padding_navigation_item"
        android:paddingBottom="@dimen/h_layout_padding_navigation_item"
        android:paddingLeft="@dimen/h_layout_padding_lift_navigation_item"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/image_view_layout_width_navigation_item"
            android:layout_height="@dimen/image_view_layout_width_navigation_item"
            android:src="@drawable/home" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/text_view_marginLift_navigation_item"
            android:textSize="@dimen/text_view_text_size_navigation_item"
            android:text="Home"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:background="?android:attr/selectableItemBackground"
        android:paddingTop="@dimen/h_layout_padding_navigation_item"
        android:paddingBottom="@dimen/h_layout_padding_navigation_item"
        android:paddingLeft="@dimen/h_layout_padding_lift_navigation_item"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/image_view_layout_width_navigation_item"
            android:layout_height="@dimen/image_view_layout_width_navigation_item"
            android:src="@drawable/ic_my_profile" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/text_view_marginLift_navigation_item"
            android:textSize="@dimen/text_view_text_size_navigation_item"
            android:text="My Profile"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:background="?android:attr/selectableItemBackground"
        android:paddingTop="@dimen/h_layout_padding_navigation_item"
        android:paddingBottom="@dimen/h_layout_padding_navigation_item"
        android:paddingLeft="@dimen/h_layout_padding_lift_navigation_item"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/image_view_layout_width_navigation_item"
            android:layout_height="@dimen/image_view_layout_width_navigation_item"
            android:src="@drawable/ic_events" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/text_view_marginLift_navigation_item"
            android:textSize="@dimen/text_view_text_size_navigation_item"
            android:text="Events"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:background="?android:attr/selectableItemBackground"
        android:paddingTop="@dimen/h_layout_padding_navigation_item"
        android:paddingBottom="@dimen/h_layout_padding_navigation_item"
        android:paddingLeft="@dimen/h_layout_padding_lift_navigation_item"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/image_view_layout_width_navigation_item"
            android:layout_height="@dimen/image_view_layout_width_navigation_item"
            android:src="@drawable/ic_favorites" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/text_view_marginLift_navigation_item"
            android:textSize="@dimen/text_view_text_size_navigation_item"
            android:text="Favorites"/>
    </LinearLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:background="?android:attr/selectableItemBackground"
        android:paddingTop="@dimen/h_layout_padding_navigation_item"
        android:paddingBottom="@dimen/h_layout_padding_navigation_item"
        android:paddingLeft="@dimen/h_layout_padding_lift_navigation_item"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/image_view_layout_width_navigation_item"
            android:layout_height="@dimen/image_view_layout_width_navigation_item"
            android:src="@drawable/ic_inbox" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/text_view_marginLift_navigation_item"
            android:textSize="@dimen/text_view_text_size_navigation_item"
            android:text="Inbox"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textAlignment="center"
                android:layout_alignParentRight="true"
                android:background="@drawable/circle"
                android:textColor="#fff"
                android:layout_marginRight="@dimen/text_view_marginLift_navigation_item"
                android:text="1"/>
        </RelativeLayout>

    </LinearLayout>


    <View
        android:layout_height="9dp"
        android:layout_width="match_parent"
        android:background="@color/navigationColor"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:background="?android:attr/selectableItemBackground"
        android:paddingTop="@dimen/h_layout_padding_navigation_item"
        android:paddingBottom="@dimen/h_layout_padding_navigation_item"
        android:paddingLeft="@dimen/h_layout_padding_lift_navigation_item"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/image_view_layout_width_navigation_item"
            android:layout_height="@dimen/image_view_layout_width_navigation_item"
            android:src="@drawable/ic_contact_us" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/text_view_marginLift_navigation_item"
            android:textSize="@dimen/text_view_text_size_navigation_item"
            android:text="Contact Us"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:background="?android:attr/selectableItemBackground"
        android:paddingTop="@dimen/h_layout_padding_navigation_item"
        android:paddingBottom="@dimen/h_layout_padding_navigation_item"
        android:paddingLeft="@dimen/h_layout_padding_lift_navigation_item"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/image_view_layout_width_navigation_item"
            android:layout_height="@dimen/image_view_layout_width_navigation_item"
            android:src="@drawable/ic_feedback" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/text_view_marginLift_navigation_item"
            android:textSize="@dimen/text_view_text_size_navigation_item"
            android:text="Feed Back"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:background="?android:attr/selectableItemBackground"
        android:paddingTop="@dimen/h_layout_padding_navigation_item"
        android:paddingBottom="@dimen/h_layout_padding_navigation_item"
        android:paddingLeft="@dimen/h_layout_padding_lift_navigation_item"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/image_view_layout_width_navigation_item"
            android:layout_height="@dimen/image_view_layout_width_navigation_item"
            android:src="@drawable/setting" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/text_view_marginLift_navigation_item"
            android:textSize="@dimen/text_view_text_size_navigation_item"
            android:text="Settings"/>
    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:paddingTop="5dp"
        android:paddingLeft="@dimen/h_layout_padding_lift_navigation_item"
        android:background="@color/navigationColor"
        android:textColor="#fff"
        android:textSize="18dp"
        android:textAllCaps="true"
        android:text="Dashboard"/>


    <include
        layout="@layout/dashboard_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="110dp"
        android:orientation="horizontal"
        android:background="@color/navigationColor">

        <ImageView
            android:layout_width="27dp"
            android:layout_height="35dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/ic_logout" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:textColor="#fff"
            android:textSize="15dp"
            android:text="Log out"/>

    </LinearLayout>



</LinearLayout>